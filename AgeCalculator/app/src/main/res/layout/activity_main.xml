<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.agecalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Date of Birth"
        android:textSize="15dp"
        android:id="@+id/tv1"/>
   <EditText
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:hint="DD"
       android:id="@+id/et1"
       android:layout_below="@id/tv1"
       />
    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:layout_toRightOf="@id/et1"
        android:layout_below="@id/tv1"
        android:hint="MM"/>
    <EditText
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:hint="YYYY"
        android:layout_toRightOf="@id/et2"
        android:layout_below="@id/tv1"
        android:id="@+id/et3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Current Date"
        android:textSize="15dp"
        android:layout_below="@id/et3"
        android:id="@+id/tv21"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="DD"
        android:id="@+id/et21"
        android:layout_below="@id/tv21"
        />
    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/et22"
        android:layout_toRightOf="@id/et21"
        android:layout_below="@id/tv21"
        android:hint="MM"/>
    <EditText
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:hint="YYYY"
        android:layout_toRightOf="@id/et22"
        android:layout_below="@id/tv21"
        android:id="@+id/et23"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Age"
        android:id="@+id/b1"
        android:layout_below="@id/et23"
        android:onClick="dothis"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b1"
        android:id="@+id/tv3"
        android:hint="You are"/>
</RelativeLayout>
